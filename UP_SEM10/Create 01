#include<iostream>
using namespace std;

//void toUpper(char& a) {
//	a -= 'A' - 'a';
//}
//
//void toLower(char*& a) {
//	a += 'a' -  'A';
//}

void  toUpper(char* a) {

	 *a -= 'A' - 'a';
}

void toLower(char* a) {
	 *a += 'a' - 'A';
}




int main()
{


	 char b = 'B';
		toLower(&b);
		cout << b <<endl;


	char c = 'b';
	toUpper(&c);
	cout << c;


	
	

}



